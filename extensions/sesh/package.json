{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "sesh",
  "title": "Sesh",
  "description": "Smart, instant terminal session management.",
  "icon": "command-icon.png",
  "author": "joshmedeski",
  "contributors": [
    "sebastian_gunnarsson",
    "pernielsentikaer"
  ],
  "categories": [
    "Developer Tools",
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "cmd-connect",
      "title": "Connect to Session",
      "subtitle": "Sesh",
      "description": "Smart terminal session manager.",
      "icon": "command-icon.png",
      "mode": "view",
      "preferences": [
        {
          "name": "openWithApp",
          "type": "appPicker",
          "required": true,
          "title": "Open with (required)",
          "description": "Open with",
          "default": "Terminal"
        },
        {
          "name": "environmentPath",
          "type": "textfield",
          "required": true,
          "title": "Environment Path",
          "description": "Colon-separated PATH (Unix-style), e.g /usr/local/bin:/usr/bin",
          "default": "/usr/local/bin:/usr/bin:/opt/homebrew/bin:/run/current-system/sw/bin"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.102.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.1.1",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  },
  "platforms": [
    "macOS"
  ]
}
