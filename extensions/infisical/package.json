{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "infisical",
  "title": "Infisical",
  "categories": [
    "Security"
  ],
  "description": "Secrets management on autopilot",
  "icon": "infisical.png",
  "author": "xmok",
  "license": "MIT",
  "preferences": [
    {
      "name": "siteUrl",
      "title": "Site URL",
      "placeholder": "https://app.infisical.com",
      "default": "https://app.infisical.com",
      "type": "textfield",
      "required": true,
      "description": "URL of Infisical instance"
    },
    {
      "name": "organizationId",
      "title": "Organization ID",
      "placeholder": "<organization-id>",
      "type": "textfield",
      "required": true,
      "description": "Organization ID"
    },
    {
      "name": "clientId",
      "title": "Client ID",
      "placeholder": "<machine-identity-client-id>",
      "type": "textfield",
      "required": true,
      "description": "Client ID from Machine Identities"
    },
    {
      "name": "clientSecret",
      "title": "Client Secret",
      "placeholder": "<machine-identity-client-secret>",
      "type": "password",
      "required": true,
      "description": "Client Secret from Machine Identities"
    },
    {
      "name": "disableTokenVerification",
      "label": "Disable Token Verification",
      "type": "checkbox",
      "required": false,
      "default": false,
      "description": "Disable token verification to make logging in faster"
    }
  ],
  "commands": [
    {
      "name": "manage-projects",
      "title": "Manage Projects",
      "subtitle": "Infisical",
      "description": "Manage Projects and Secrets",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@infisical/sdk": "^4.0.4",
    "@raycast/api": "^1.102.7",
    "@raycast/utils": "^1.17.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  },
  "platforms": [
    "macOS"
  ]
}
