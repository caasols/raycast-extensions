{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "plane",
  "title": "Plane",
  "description": "Explore work items in Plane and take actions on it",
  "icon": "plane-icon.png",
  "author": "saurabhkmr98",
  "owner": "makeplane",
  "access": "public",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "create-work-item",
      "title": "Create Work Item",
      "subtitle": "Plane",
      "description": "Create a new work item",
      "mode": "view"
    },
    {
      "name": "search-work-items",
      "title": "Search Work Items",
      "subtitle": "Plane",
      "description": "Search work items across projects",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@makeplane/plane-node-sdk": "^0.1.3",
    "@raycast/api": "^1.100.3",
    "@raycast/utils": "^1.17.0",
    "date-fns": "^4.1.0",
    "marked": "^16.1.0",
    "turndown": "^7.2.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.1.1",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "preferences": [
    {
      "title": "API Base Path",
      "name": "API_BASE_PATH",
      "type": "textfield",
      "required": false,
      "description": "Your Plane API base path",
      "default": "https://api.plane.so"
    },
    {
      "title": "App Base URL",
      "name": "APP_BASE_URL",
      "type": "textfield",
      "required": false,
      "description": "Your Plane app base url",
      "default": "https://app.plane.so"
    },
    {
      "title": "API Key",
      "name": "API_KEY",
      "type": "password",
      "required": false,
      "description": "Your Plane API key"
    }
  ],
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  },
  "platforms": [
    "macOS"
  ]
}
